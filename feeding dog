  <button onclick="feedDog()">Feed the Dog</button>

  <script>
    function feedDog() {
      const food = document.getElementById('food');
      food.classList.add('move');

      // After the animation, hide the food again
      setTimeout(() => {
        food.classList.remove('move');
      }, 1500);
    }
  </script>

